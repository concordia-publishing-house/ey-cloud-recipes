# Please make sure to update the license_key information with the license key for your New Relic
# account.
#
#
newrelic:
  #
  # Update with your New Relic account license key:
  #
  license_key: '<%= @key %>'
  #
  # Set to '1' for verbose output, remove for normal output.
  # All output goes to stdout/stderr.
  #
  # verbose: 1
#
# Agent Configuration:
#
agents:
  # this is where configuration for agents belongs
  postgres:
    host: '<%= @host %>'
    port: <%= @port %>
    user: '<%= @user %>'
    password: '<%= @password %>'
    dbname: '<%= @dbname %>'
    sslmode: '<%= @sslmode %>' # (disable|allow|prefer|require)
    label: '<%= @label %>' # This label is optional and will default to the server hostname - it shows up in the NewRelic Web UI
