server {
  listen 81;
  server_name <%= @origin %>;
  return 302 $scheme://<%= @destination %>$request_uri;
}

<% if @with_ssl %>
server {
  listen 444;
  server_name <%= @origin %>;
  
  ssl on;
  ssl_certificate /data/nginx/ssl/<%= @origin %>.crt;
  ssl_certificate_key /data/nginx/ssl/<%= @origin %>.key;
  ssl_protocols SSLv3 TLSv1;
  
  return 302 $scheme://<%= @destination %>$request_uri;
}
<% end %>
